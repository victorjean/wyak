<div id='team_popup' >
<h3>Manage <%=@teamType%> Teams</h3>

<%= form_tag('/teams/manage', :id=>'manage_team') do %>
<TABLE cellpadding="0" cellspacing="1"  width="540">
		<tr  >
			<td align="left" width="20%"><%=@teamType%> ID</td>
			<td align="left" width="40%">
				<%-if (@authInfo.nil?)-%>
				<%= text_field_tag('userid', '', options = {:size => 10,  :onchange => "$('team_manage_submit').disabled = false"}) %>
				<%= hidden_field_tag('current_user') %>
				<%-else-%>
				<%= text_field_tag('userid', @authInfo.login, options = {:size => 10, :onchange => "$('team_manage_submit').disabled = false",
:disabled  => true}) %> <BUTTON type="button" onclick="$('userid').disabled = false">Edit</BUTTON>
				<%= hidden_field_tag('current_user', @authInfo.login) %>
				<%-end-%>
			</td>
			<td align="right" width="40%"><%-if (!@authInfo.nil?)-%><button type="button" onclick="reload_team()">Reload Teams</button><%-end-%></td>
		</tr>
		<tr   >
			<td align="left" width="30%">Password</td>
			<td align="left" width="30%">
				<%-if (@authInfo.nil?)-%>
				<%= password_field_tag(:pass,'',options ={:size => 10,:onchange => "$('team_manage_submit').disabled = false"}) %> 
				<%-else-%>
				<%= password_field_tag(:pass,'', options = {:size => 10, :onchange => "$('team_manage_submit').disabled = false",
:disabled  => true}) %> <BUTTON type="button" onclick="$('pass').disabled = false">Edit</BUTTON>
				<%-end-%>
				
			</td>
			<td align="right" width="40%"><BUTTON type="button" id='team_manage_submit' onclick="submit_team()" disabled="disabled">Submit</BUTTON></td>
		</tr>
	
</table>
<%= hidden_field_tag('teamType', @teamType) %>
<%= hidden_field_tag('manageAction') %>

<% end %>

</div>