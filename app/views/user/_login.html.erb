
    <div id="login-modal" class="reveal-modal wrapper-modal" style="display: none;">
      <div class="container large-9"> 

        <%= render :partial => 'user/flashmessage' %>

        <h3>RotoStarter Log In</h3>
        <%= form_tag do %>
          <%= label_tag(:email, "Email:") %>
          <%= text_field_tag(:email) %>
          <%= label_tag(:pass, "Password:") %>
          <%= password_field_tag(:pass) %>
          <br><br>
          <input name="commit" type="submit" class="button" value="Log In"/>
          <br>
          <p class="txt-tiny">
            
            <%= link_to 'Forgot Your Password?', :controller => 'user', :action => 'forgot_password' %>
          </p>
        <% end %>
      </div>
    </div>