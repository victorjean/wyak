<%= form_tag do %>
<%= @user.errors.full_messages.first if @user.errors.any? %>
  <h3>Register New User</h3>
  <%= label_tag(:email, "Email:") %>
  <%= text_field_tag('email', @user.email) %><BR>
  <%= label_tag(:pass, "Password:") %>
  <%= password_field_tag(:pass) %>
  <BR>
  <%= label_tag(:repass, "Confirm Password:") %>
  <%= password_field_tag(:repass) %>
  <BR>
  <%= submit_tag("Sign Up") %>
  <BR>
  
<% end %>
